{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": [
    "src",
    "src/types/**/*.d.ts"
  ],
  "scripts": {
    "dev": "ts-node --files src/index.ts",
    "start": "node dist/index.js"
  }
}